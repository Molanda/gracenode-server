{
	"gracenode-debug": {
		"directories": [
                        "node_modules/gracenode-server/test/",
                        "node_modules/gracenode-server/index.js",
                        "node_modules/gracenode-server/http.js",
                        "node_modules/gracenode-server/https.js",
                        "node_modules/gracenode-server/hooks/",
                        "node_modules/gracenode-server/lib/"
                ],
                "lintOptions": {
                        "node": true,
                        "bitwise": false,
                        "camelcase": true,
                        "curly": true,
                        "eqeqeq": true,
                        "forin": false,
                        "immed": true,
                        "latedef": false,
                        "newcap": true,
                        "noarg": true,
                        "noempty": true,
                        "undef": true,
                        "unused": true,
                        "nonew": true,
                        "white": true,
                        "maxdepth": 5,
                        "quotmark": "single",
                        "globals"   : {
                                "mocha"      : false,
                                "describe"   : false,
                                "it"         : false,
                                "before"     : false,
                                "beforeEach" : false,
                                "after"      : false,
                                "afterEach"  : false
                        }
                }
	},
	"modules": {
		"log": {
			"console": true,
			"color": true,
			"level": "verbose"
		},
		"gracenode-server": {
			"protocol": "http",
			"host": "localhost",
			"port": 8099,
			"urlPrefix": "/dummy/",
			"controllerPath": "gracenode-server/test/controller/",
			"reroute": [
				{ "from": "/take/me", "to": "/land/here" },
				{ "from": "/", "to": "/land/here" }
			],
			"error": {
				"500": {
					"controller": "error",
					"method": "internal"
				}
			},
			"ignored": [
				"/ignore/me"
			]
		}
	}
}
